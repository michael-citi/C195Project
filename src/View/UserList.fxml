          <TableColumn id="fullNameCol" fx:id="fullNameCol" prefWidth="277.0" text="Name" />
            <TableColumn id="userNameCol" fx:id="userNameCol" minWidth="0.0" prefWidth="332.0" text="User Name" />
            <TableColumn id="activeCol" fx:id="activeCol" prefWidth="94.0" text="Active" />
        </columns>
      </TableView>
      <Button id="newUsrBtn" layoutX="40.0" layoutY="54.0" mnemonicParsing="false" onAction="#addUser" prefHeight="25.0" prefWidth="79.0" text="New User" />
